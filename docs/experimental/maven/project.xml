	<!-- ================================================================== -->
	<!-- Build information                                                  -->
	<!-- ================================================================== -->
	<build>
			<nagEmailAddress>scott_battaglia@rutgers.edu</nagEmailAddress>
		<sourceDirectory>source</sourceDirectory>
		<unitTestSourceDirectory>
			${basedir}/tests
		</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test.java</include>
			</includes>
			<excludes>
				<exclude>**/Abstract*Test.java</exclude>
				<exclude>**/*AbstractTest.java</exclude>
				<exclude>**DbTest.java</exclude>
			</excludes>
			<resources>
				<resource>
					<directory>${basedir}/tests</directory>
					<includes>
						<include>**/**</include>
						<include>**/*.txt</include>
					</includes>
					<excludes>
						<exclude>**/*.java</exclude>
					</excludes>
					<filtering>false</filtering>
				</resource>
				<resource>
					<directory>${basedir}/source</directory>
					<includes>
						<include>**/**</include>
					</includes>
					<excludes>
						<exclude>**/*.java</exclude>
					</excludes>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<!-- Include all files from the properties directory as classpath resources -->
			<resource>
				<directory>properties</directory>
				<targetPath>properties</targetPath>
				<includes>
					<include>*/**</include>
				</includes>
				<excludes>
					<exclude>CVS</exclude>
				</excludes>
			</resource>

			<!-- Include all properties and res files as classpath resources -->
			<resource>
				<directory>source</directory>
				<targetPath></targetPath>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.res</include>
				</includes>
				<excludes>
					<exclude>CVS</exclude>
				</excludes>
			</resource>

			<!-- Specify some resources to be places in the root package -->
			<resource>
				<directory>properties</directory>
				<targetPath></targetPath>
				<includes>
					<include>whirlycache.xml</include>
				</includes>
				<excludes>
					<exclude>CVS</exclude>
				</excludes>
			</resource>

			<!-- Include the stylesheets directory in the classpath -->
			<resource>
				<directory>webpages/stylesheets</directory>
				<includes>
					<include>**/*.cpd</include>
					<include>**/*.xsl</include>
					<include>**/*.ssl</include>
					<include>**/*.sdf</include>
					<include>**/*.properties</include>
				</includes>
				<excludes>
					<exclude>CVS</exclude>
					<exclude>**/*.UTF-8.properties</exclude>
				</excludes>
			</resource>
			<!--
			Include non image media files in class path.
			This would include xml and properties files
			-->
			<resource>
				<directory>webpages/media</directory>
				<excludes>
					<exclude>CVS</exclude>
					<exclude>**/*.gif</exclude>
					<exclude>**/*.jpg</exclude>
					<exclude>**/*.css</exclude>
				</excludes>
			</resource>

			<!-- Put the DTDs where they are needed -->
			<resource>
				<directory>webpages/dtd</directory>
				<targetPath>properties/chanpub/chandefs</targetPath>
				<includes>
					<include>channelDefinition.dtd</include>
				</includes>
			</resource>
			<resource>
				<directory>webpages/dtd</directory>
				<targetPath>
					org/jasig/portal/container/deploy
				</targetPath>
				<includes>
					<include>web-app_2_3.dtd</include>
				</includes>
			</resource>
		</resources>
	</build>
