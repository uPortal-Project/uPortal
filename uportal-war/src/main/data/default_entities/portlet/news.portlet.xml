<portlet-definition
    xmlns="https://source.jasig.org/schemas/uportal/io/portlet-definition"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://source.jasig.org/schemas/uportal/io/portlet-definition ../../../resources/xsd/io/portlet-definition/portlet-definition-4.0.xsd"
    version="4.0">
    <title>News</title>
    <name>News</name>
    <fname>news</fname>
    <desc>Personalized news and RSS reader</desc>
    <type>Portlet</type>
    <timeout>60000</timeout>
    <portlet-descriptor xmlns:up="https://source.jasig.org/schemas/uportal">
        <up:webAppName>/NewsReaderPortlet</up:webAppName>
        <up:portletName>news</up:portletName>
    </portlet-descriptor>
    <category>News</category>
    <group>Everyone</group>
    <parameter>
        <name>disableDynamicTitle</name>
        <value>true</value>
    </parameter>
    <parameter>
      <name>iconUrl</name>
      <value>/ResourceServingWebapp/rs/tango/0.8.90/32x32/apps/internet-news-reader.png</value>
    </parameter>
    <parameter>
        <name>mobileIconUrl</name>
        <value>/media/skins/icons/mobile/feed.png</value>
    </parameter>
    <portlet-preference> 
      <name>maxStories</name>
      <value>10</value>
    </portlet-preference>
</portlet-definition>
