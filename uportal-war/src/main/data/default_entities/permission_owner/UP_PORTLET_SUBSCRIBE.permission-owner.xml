<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<permission-owner xmlns="https://source.jasig.org/schemas/uportal/io/permission-owner" xmlns:ns2="https://source.jasig.org/schemas/uportal/io/user" xmlns:ns3="https://source.jasig.org/schemas/uportal/io/portlet-type" xmlns:ns4="https://source.jasig.org/schemas/uportal/io/portlet-definition" xmlns:ns5="https://source.jasig.org/schemas/uportal" xmlns:ns6="https://source.jasig.org/schemas/uportal/io/stylesheet-descriptor" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.0" xsi:schemaLocation="https://source.jasig.org/schemas/uportal/io/permission-owner https://source.jasig.org/schemas/uportal/io/permission-owner/permission-owner-4.0.xsd">
    <name>Portlet Subscribing</name>
    <fname>UP_PORTLET_SUBSCRIBE</fname>
    <desc>Permissions controlling the rendering of and subscription to uMobile content</desc>
    <activity>
        <name>Subscribe Approved</name>
        <fname>SUBSCRIBE_APPROVED</fname>
        <desc>Subscribe to uMobile content that is approved, but not yet published</desc>
        <targetProvider>channelsAndCategoriesTargetProvider</targetProvider>
    </activity>
    <activity>
        <name>Subscribe</name>
        <fname>SUBSCRIBE</fname>
        <desc>Subscribe to published, unexpired uMobile content</desc>
        <targetProvider>channelsAndCategoriesTargetProvider</targetProvider>
    </activity>
    <activity>
        <name>Subscribe Created</name>
        <fname>SUBSCRIBE_CREATED</fname>
        <desc>Subscribe to uMobile content that has not yet been approved or published</desc>
        <targetProvider>channelsAndCategoriesTargetProvider</targetProvider>
    </activity>
    <activity>
        <name>Subscribe Expired</name>
        <fname>SUBSCRIBE_EXPIRED</fname>
        <desc>Subscribe to expired uMobile content</desc>
        <targetProvider>channelsAndCategoriesTargetProvider</targetProvider>
    </activity>
</permission-owner>
