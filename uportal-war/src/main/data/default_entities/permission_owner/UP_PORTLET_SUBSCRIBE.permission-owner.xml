<permission-owner xmlns="https://source.jasig.org/schemas/uportal/io/permission-owner" xmlns:ns2="https://source.jasig.org/schemas/uportal/io/stylesheet-descriptor" xmlns:ns3="https://source.jasig.org/schemas/uportal/io/portlet-definition" xmlns:ns4="https://source.jasig.org/schemas/uportal" xmlns:ns5="https://source.jasig.org/schemas/uportal/io/portlet-type" xmlns:ns6="https://source.jasig.org/schemas/uportal/io/user" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.0" xsi:schemaLocation="https://source.jasig.org/schemas/uportal/io/permission-owner https://source.jasig.org/schemas/uportal/io/permission-owner/permission-owner-4.0.xsd">
    <name>Portlet Subscribing</name>
    <fname>UP_PORTLET_SUBSCRIBE</fname>
    <desc>Permissions controlling the rendering of and subscription to uPortal content</desc>
    <activity>
        <name>Subscribe</name>
        <fname>SUBSCRIBE</fname>
        <desc>Subscribe to published, unexpired uPortal content</desc>
        <targetProvider>channelsAndCategoriesTargetProvider</targetProvider>
    </activity>
    <activity>
        <name>Subscribe Approved</name>
        <fname>SUBSCRIBE_APPROVED</fname>
        <desc>Subscribe to uPortal content that is approved, but not yet published</desc>
        <targetProvider>channelsAndCategoriesTargetProvider</targetProvider>
    </activity>
    <activity>
        <name>Subscribe Created</name>
        <fname>SUBSCRIBE_CREATED</fname>
        <desc>Subscribe to uPortal content that has not yet been approved or published</desc>
        <targetProvider>channelsAndCategoriesTargetProvider</targetProvider>
    </activity>
    <activity>
        <name>Subscribe Expired</name>
        <fname>SUBSCRIBE_EXPIRED</fname>
        <desc>Subscribe to expired uPortal content</desc>
        <targetProvider>channelsAndCategoriesTargetProvider</targetProvider>
    </activity>
</permission-owner>
