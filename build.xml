        <echo message="Initializing uPortal" />
        <antcall target="deploy-ear" />
        <antcall target="db" />
<!-- AW (2007/12/13):  Replaced by Import/Export tech
        <antcall target="pubchan" />
-->
        <antcall target="i18n-db" />
