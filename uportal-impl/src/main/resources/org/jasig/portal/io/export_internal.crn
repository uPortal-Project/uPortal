                  RuntimeRequestResponse tr = new RuntimeRequestResponse();
                  tr.setAttribute(Attributes.RETURN_VALUE, rslt);
                  tr.setAttribute('GROUP_ID', GROUP_ID);
                  tr.setAttribute('GROUP_NAME', GROUP_NAME);
                  tr.setAttribute('ENTITY_TYPE_NAME', ENTITY_TYPE_NAME);
                  tr.setAttribute('CREATOR_ID', CREATOR_ID);
                  tr.setAttribute('DESCRIPTION', DESCRIPTION);
                  
                  PORTAL_CONTEXT.getBean('export-group_membership').perform(tr, new RuntimeRequestResponse());
                  def exportedGroupMembershipDoc = rslt.getValue();
                  ScriptAttributes.RESPONSE.setAttribute('exportedGroupMembershipDoc', exportedGroupMembershipDoc);
              </script>
              <subtasks>
                <write-document node="${exportedGroupMembershipDoc}" file="${EXPORT_DIR}/group_membership/${SAFE_NAME}.group_membership"/>
