            <parameter value="${SYSID}"/>
            <subtasks>
				<with-attribute key="SAFE_NAME" value="${org.jasig.portal.io.SafeFileNamePhrase(${GROUP_NAME})}">
          <!-- This entire groovy task is essentially a long-winded with-attribute -->
