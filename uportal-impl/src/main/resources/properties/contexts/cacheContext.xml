<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
    <!-- 
     | The per-cache settings are configured in /uportal-impl/src/main/resources/properties/ehcache.xml
     | This file is specified by the cacheManager bean at the bottom of this document
     +-->
    
    <!-- 
     | IBasicEntity caching service
     +-->
    <bean id="entityCachingService" class="org.jasig.portal.concurrency.caching.CacheFactoryEntityCachingService">
        <property name="cacheFactory" ref="cacheFactory" />
    </bean>

    <!--
     | Factory used by portal code to retrieve caches.
     +-->
    <bean id="cacheFactory" class="org.jasig.portal.utils.cache.CacheProviderFactory">
        <property name="cacheProviderFacade" ref="cacheProviderFacade" />
        <property name="cacheModelFactory" ref="cacheModelFactory" />
    </bean>
    
    <!-- 
     | Cache Provider used by the persistence code
     +-->
     <bean id="cacheProvider" class="org.jasig.portal.utils.cache.hibernate.EhCacheProvider">
        <property name="cacheManager" ref="cacheManager" />
     </bean>
    

    <!-- Support classes for the cacheFactory and cacheProvider -->    

    <bean id="cacheModelFactory" class="org.jasig.portal.utils.cache.EhCacheModelFactory" />

    <bean id="cacheProviderFacade" class="org.jasig.portal.utils.cache.EhCacheFacade">
        <property name="cacheManager" ref="cacheManager" />
        <property name="createMissingCaches" value="true" />
    </bean>

    <bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
        <property name="cacheManagerName" value="uPortal.cacheManager" />
        <property name="configLocation" value="classpath:/properties/ehcache.xml" />
    </bean>
    
    <bean id="baseCachingInterceptor" abstract="true" class="org.springmodules.cache.interceptor.caching.NameMatchCachingInterceptor">
        <property name="cacheProviderFacade" ref="cacheProviderFacade" />
        <property name="cacheKeyGenerator">
            <bean class="org.springmodules.cache.key.HashCodeCacheKeyGenerator">
                <property name="generateArgumentHashCode" value="true" />
            </bean>
        </property>
    </bean>
    
    <bean id="baseFlushingInterceptor" abstract="true" class="org.springmodules.cache.interceptor.flush.NameMatchFlushingInterceptor">
        <property name="cacheProviderFacade" ref="cacheProviderFacade" />
    </bean>

    <!--
     | Service used by DLM to cache Layouts.
     +-->
    <bean id="layoutCachingService" class="org.jasig.portal.layout.dlm.LayoutCachingService">
        <property name="layoutCache">
            <bean class="org.jasig.portal.utils.cache.MapCacheFactoryBean">
                <property name="cacheFactory" ref="cacheFactory" />
                <property name="cacheName" value="org.jasig.portal.layout.dlm.LAYOUT_CACHE" />
            </bean>
        </property>
    </bean>

    <bean class="org.jasig.portal.utils.ResourceLoader">
        <property name="resourceUrlCache">
            <bean class="org.jasig.portal.utils.cache.MapCacheFactoryBean">
                <property name="cacheFactory" ref="cacheFactory" />
                <property name="cacheName" value="org.jasig.portal.utils.ResourceLoader.RESOURCE_URL_CACHE" />
            </bean>
        </property>
        <property name="resourceUrlNotFoundCache">
            <bean class="org.jasig.portal.utils.cache.MapCacheFactoryBean">
                <property name="cacheFactory" ref="cacheFactory" />
                <property name="cacheName" value="org.jasig.portal.utils.ResourceLoader.RESOURCE_URL_NOT_FOUND_CACHE" />
            </bean>
        </property>
    </bean>
    
    <bean id="pageCachingFilter" class="org.jasig.resourceserver.utils.cache.ConfigurablePageCachingFilter">
        <constructor-arg ref="cacheManager"/>
        <constructor-arg value="org.jasig.portal.utils.cache.ConfigurablePageCachingFilter.PAGE_CACHE"/>
    </bean>
    
</beans>
