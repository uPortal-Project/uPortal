	<!-- ================================================================== -->
	<!-- Build information                                                  -->
	<!-- ================================================================== -->
	<build>
			<nagEmailAddress>scott_battaglia@rutgers.edu</nagEmailAddress>
		<sourceDirectory>source</sourceDirectory>
		<unitTestSourceDirectory>
			${basedir}/tests
		</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test.java</include>
			</includes>
			<excludes>
				<exclude>**/Abstract*Test.java</exclude>
				<exclude>**/*AbstractTest.java</exclude>
				<exclude>**DbTest.java</exclude>
			</excludes>
			<resources>
				<resource>
					<directory>${basedir}/tests</directory>
					<includes>
						<include>**/**</include>
						<include>**/*.txt</include>
					</includes>
					<excludes>
						<exclude>**/*.java</exclude>
					</excludes>
					<filtering>false</filtering>
				</resource>
				<resource>
					<directory>${basedir}/source</directory>
					<includes>
						<include>**/**</include>
					</includes>
					<excludes>
						<exclude>**/*.java</exclude>
					</excludes>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<!-- Include all properties files as classpath resources -->
			<resource>
				<directory>properties</directory>
				<targetPath>properties</targetPath>
				<includes>
					<include>*/**</include>
				</includes>
				<excludes>
					<exclude>CVS</exclude>
				</excludes>
			</resource>
			<!-- Specify some resources to be places in the root package -->
			<resource>
				<directory>properties</directory>
				<includes>
					<include>properties/log4j.xml</include>
					<include>properties/log4j.dtd</include>
					<include>properties/whirlycache.xml</include>
				</includes>
				<excludes>
					<exclude>CVS</exclude>
				</excludes>
			</resource>
			<!-- Specify some resources to be places in the root package -->
			<resource>
				<directory>webpages/stylesheets</directory>
				<includes>
					<include>
						**/*.cpd,**/*.xsl,**/*.ssl,**/*.sdf,**/*.properties
					</include>
				</includes>
				<excludes>
					<exclude>CVS,**/*.UTF-8.properties</exclude>
				</excludes>
			</resource>
			<!-- Specify some resources to be places in the root package -->
			<resource>
				<directory>webpages/media</directory>
				<excludes>
					<exclude>CVS,**/*.gif,**/*.jpg,**/*.css</exclude>
				</excludes>
			</resource>
			<!-- Specify some resources to be places in the root package -->
			<resource>
				<directory>webpages/dtd</directory>
				<targetPath>properties/chanpub/chandefs</targetPath>
				<includes>
					<include>channelDefinition.dtd</include>
				</includes>
			</resource>
			<!-- Specify some resources to be places in the root package -->
			<resource>
				<directory>webpages/dtd</directory>
				<targetPath>
					org/jasig/portal/container/deploy
				</targetPath>
				<includes>
					<include>web-app_2_3.dtd</include>
				</includes>
			</resource>
		</resources>
	</build>
