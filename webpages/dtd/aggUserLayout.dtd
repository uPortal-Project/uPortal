<!ELEMENT layout (folder|channel)*>

<!ELEMENT folder (folder|channel|restriction|add_target|move_target)*>
<!ATTLIST folder
  ID ID #REQUIRED
  fragmentID CDATA #IMPLIED
  group CDATA #IMPLIED
  type (header|footer|regular) "regular"
  hidden (true|false) "false"
  unremovable (true|false) "false"
  immutable (true|false) "false"
  priority CDATA "0"
  name CDATA #IMPLIED>


<!ELEMENT channel (restriction|parameter)*>
<!ATTLIST channel
  ID ID #REQUIRED
  name CDATA #REQUIRED
  description CDATA #REQUIRED
  title CDATA #REQUIRED
  class CDATA #REQUIRED
  chanID CDATA #REQUIRED
  typeID CDATA #REQUIRED
  fragmentID CDATA #IMPLIED
  group CDATA #IMPLIED
  fname CDATA #IMPLIED
  timeout CDATA "10000"
  priority CDATA "0"
  hidden (true|false) "false"
  unremovable (true|false) "false"
  immutable (true|false) "false"
  hasHelp (true|false) "false"
  hasAbout (true|false) "false">


<!-- the restriction name/value will depend on an implementation -->
<!ELEMENT restriction EMPTY>
<!ATTLIST restriction
  path CDATA #IMPLIED
  value CDATA #REQUIRED
  type CDATA #REQUIRED>

<!-- marking nodes -->
<!ELEMENT add_target EMPTY>
<!ATTLIST add_target
  nextID CDATA #REQUIRED
  parentID CDATA #REQUIRED>

<!ELEMENT move_target EMPTY>
<!ATTLIST move_target
  nextID CDATA #REQUIRED
  parentID CDATA #REQUIRED>

<!-- parameters -->
<!ELEMENT parameter EMPTY>
<!ATTLIST parameter
  name CDATA #REQUIRED
  value CDATA #REQUIRED
  override (yes|no) "no">