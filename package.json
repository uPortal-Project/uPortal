{
  "name": "uportal",
  "private": true,
  "devDependencies": {
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "postcss-less": "^6.0.0",
    "prettier": "~3.0.0",
    "remark-cli": "^11.0.0",
    "remark-preset-lint-consistent": "^5.0.0",
    "remark-preset-lint-recommended": "^6.0.0",
    "remark-validate-links": "^12.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.0.0"
  },
  "workspaces": [
    "uPortal-webapp/"
  ],
  "scripts": {
    "lint-js": "eslint . --ignore-path .gitignore --ignore-pattern *.min.js",
    "lint-less": "stylelint **/*.less !**/bootstrap/**/*.less !**/build/**/*.less",
    "lint-md": "remark -f *.md docs/**",
    "format-js": "npm run lint-js -- --fix",
    "format-less": "npm run lint-less -- --fix"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "es2023": true,
      "browser": true
    },
    "globals": {
      "jQuery": false,
      "$": false,
      "_": false,
      "up": false,
      "fluid": false
    },
    "rules": {
      "no-redeclare": [
        "error",
        {
          "builtinGlobals": false
        }
      ]
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  },
  "stylelint": {
    "customSyntax": "postcss-less",
    "extends": [
      "stylelint-config-standard",
      "stylelint-prettier/recommended"
    ],
    "rules": {
      "no-invalid-position-at-import-rule": null,
      "no-descending-specificity": null,
      "selector-id-pattern": null,
      "selector-class-pattern": null,
      "function-no-unknown": null
    }
  },
  "prettier": {}
}