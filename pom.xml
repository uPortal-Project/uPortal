<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.jasig</groupId>
        <artifactId>jasig-parent</artifactId>
        <version>5</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jasig.portal</groupId>
    <artifactId>uportal-parent</artifactId>
    <packaging>pom</packaging>
    
    <name>uPortal</name>
    <description>The root project definition for the uPortal project.</description>
    <version>3.0.0-M5-SNAPSHOT</version>

    <issueManagement>
        <system>jira</system>
        <url>http://www.ja-sig.org/issues/browse/UP</url>
    </issueManagement>

    <scm>
        <connection>scm:svn:https://www.ja-sig.org/svn/up2/trunk</connection>
        <developerConnection>scm:svn:https://www.ja-sig.org/svn/up2/trunk</developerConnection>
        <url>http://developer.ja-sig.org/source/browse/jasigsvn/up2/trunk</url>
    </scm>

    <repositories>
        <repository>
            <id>jasig-repository</id>
            <name>JA-SIG Maven2 Repository</name>
            <url>http://developer.ja-sig.org/maven2</url>
        </repository>
        <repository>
            <name>pluto-staging</name>
            <id>pluto-staging</id>
            <url>http://people.apache.org/builds/portals-pluto/m2-staging-repository/</url>
        </repository>
        <repository>
            <id>Codehaus Snapshots</id>
            <url>http://snapshots.repository.codehaus.org/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
        <repository>
            <id>apache.snapshots</id>
            <url>http://people.apache.org/repo/m2-snapshot-repository</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>apache.plugin.snapshots</id>
            <url>http://people.apache.org/repo/m2-snapshot-repository</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </pluginRepository>
        <pluginRepository>
            <id>Codehaus Snapshots</id>
            <url>http://snapshots.repository.codehaus.org/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </pluginRepository>
    </pluginRepositories>


    <!-- Dependency Version Properties ==================================== -->
    <properties>
        <activation.version>1.0.2</activation.version>
        <ant.version>1.6.5</ant.version>
        <casclient.version>2.1.1</casclient.version>
        <cernunnos.version>1.0-M3</cernunnos.version>
        <commons-codec.version>1.3</commons-codec.version>
        <commons-collections.version>3.2</commons-collections.version>
        <commons-cli.version>1.1</commons-cli.version>
        <commons-dbcp.version>1.2.1</commons-dbcp.version>
        <commons-httpclient.version>3.0.1</commons-httpclient.version>
        <commons-io.version>1.3.2</commons-io.version>
        <commons-lang.version>2.3</commons-lang.version>
        <commons-logging.version>1.1</commons-logging.version>
        <commons-pool.version>1.3</commons-pool.version>
        <concurrent.version>1.3.4</concurrent.version>
        <cos.version>05Nov2002</cos.version>
        <hsqldb.version>1.8.0.7</hsqldb.version>
        <jdom.version>1.0</jdom.version>
        <jstl.version>1.1.2</jstl.version>
        <jtidy.version>4aug2000r7-dev</jtidy.version>
        <junit.version>3.8.1</junit.version>
        <log4j.version>1.2.14</log4j.version>
        <oro.version>2.0.8</oro.version>
        <pluto.version>1.0.1</pluto.version>
        <portlet-api.version>1.0</portlet-api.version>
        <rome.version>0.8</rome.version>
        <servlet-api.version>2.4</servlet-api.version>
        <spring-framework.version>2.0.6</spring-framework.version>
        <standard.version>1.1.2</standard.version>
        <tagsoup.version>1.1.3</tagsoup.version>
        <tyrex.version>1.0.1</tyrex.version>
        <whirlycache.version>1.0.1</whirlycache.version>
        <wsrp4j.version>0.3</wsrp4j.version>
        <xercesImpl.version>2.7.1</xercesImpl.version>
        <xml-resolver.version>1.2-JASIG_PATCH</xml-resolver.version>
        <xom.version>1.1</xom.version>
    </properties>

    <modules>
        <module>uportal-impl</module>
        <module>uportal-war</module>
        <module>uportal-ear</module>
        <module>uportal-ear-deployer</module>
        <module>uportal-ant-tasks</module>
        <module>uportal-pluto-support</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <links>
                        <link>http://java.sun.com/j2se/1.5.0/docs/api/</link>
                    </links>
                </configuration>
            </plugin>
        </plugins>
    </reporting>
</project>
